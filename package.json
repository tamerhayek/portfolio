{
	"name": "portfolio",
	"version": "1.0.1",
	"private": true,
	"scripts": {
		"start": "PORT=3000 BODY_SIZE_LIMIT=100000000 node -r dotenv/config build",
		"dev": "vite dev",
		"dev:host": "vite dev --host",
		"postinstall": "pnpm inlang:compile",
		"build": "pnpm inlang:compile && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "pnpm test:integration && pnpm test:unit",
		"test:setup": "npx playwright install --with-deps",
		"test:integration": "npx playwright test",
		"test:unit": "vitest run",
		"verify": "pnpm format && pnpm check && pnpm lint",
		"verify:tests": "pnpm format && pnpm check && pnpm lint && pnpm test",
		"inlang:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"docker:start": "docker compose up -d --build && pnpm docker:prune",
		"docker:start:web": "docker compose up -d --build portfolio-web && pnpm docker:prune",
		"docker:build": "docker compose build && pnpm docker:prune",
		"docker:build:no-cache": "docker compose build --no-cache && pnpm docker:prune",
		"docker:build:web": "docker compose build portfolio-web && pnpm docker:prune",
		"docker:restart": "docker compose restart && pnpm docker:prune",
		"docker:restart:web": "docker compose restart portfolio-web && pnpm docker:prune",
		"docker:stop": "docker compose stop",
		"docker:stop:web": "docker compose stop portfolio-web",
		"docker:down": "docker compose down",
		"docker:down:remove-images": "docker compose down --rmi",
		"docker:down:web": "docker compose down portfolio-web",
		"docker:logs": "docker compose logs -f",
		"docker:logs:web": "docker compose logs -f portfolio-web",
		"docker:prune": "docker system prune --all --force"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^1.6.1",
		"@inlang/paraglide-js-adapter-sveltekit": "^0.6.5",
		"@playwright/test": "^1.28.1",
		"@steeze-ui/svelte-icon": "^1.5.0",
		"@steeze-ui/tabler-icons": "^3.0.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.12",
		"@types/eslint": "^8.56.0",
		"@types/node": "^20.12.7",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.10.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.38",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/ubuntu": "^5.0.12",
		"@sentry/sveltekit": "^7.110.1",
		"clsx": "^2.1.0",
		"dotenv": "^16.4.5",
		"tailwind-merge": "^2.2.2",
		"tailwindcss": "^3.4.3",
		"vite-plugin-mkcert": "^1.17.5"
	}
}
