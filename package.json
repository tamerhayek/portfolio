{
	"name": "portfolio",
	"version": "1.4.0",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"start": "PORT=3000 node -r dotenv/config build",
		"dev": "vite dev",
		"dev:host": "vite dev --host",
		"postinstall": "pnpm inlang:compile",
		"build": "pnpm inlang:compile && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "pnpm test:integration && pnpm test:unit",
		"test:setup": "npx playwright install --with-deps",
		"test:integration": "npx playwright test",
		"test:unit": "vitest run",
		"verify": "pnpm format && pnpm check && pnpm lint",
		"verify:tests": "pnpm format && pnpm check && pnpm lint && pnpm test",
		"inlang:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^1.11.3",
		"@playwright/test": "^1.48.1",
		"@steeze-ui/svelte-icon": "^1.5.0",
		"@steeze-ui/tabler-icons": "^3.2.0",
		"@sveltejs/kit": "^2.7.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.13",
		"dotenv": "^16.4.5",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"globals": "^15.11.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "5.0.0-next.205",
		"svelte-check": "^3.8.6",
		"tailwindcss": "^3.4.14",
		"typescript": "5.5.4",
		"typescript-eslint": "^8.9.0",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/ubuntu": "^5.1.0",
		"@inlang/paraglide-sveltekit": "0.11.0",
		"@sveltejs/adapter-vercel": "^5.4.8",
		"@vercel/analytics": "^1.4.1",
		"@vercel/speed-insights": "^1.1.0"
	}
}
