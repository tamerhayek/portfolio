{
	"name": "portfolio",
	"version": "1.3.0",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"start": "PORT=3000 node -r dotenv/config build",
		"dev": "vite dev",
		"dev:host": "vite dev --host",
		"postinstall": "pnpm inlang:compile",
		"build": "pnpm inlang:compile && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "pnpm test:integration && pnpm test:unit",
		"test:setup": "npx playwright install --with-deps",
		"test:integration": "npx playwright test",
		"test:unit": "vitest run",
		"verify": "pnpm format && pnpm check && pnpm lint",
		"verify:tests": "pnpm format && pnpm check && pnpm lint && pnpm test",
		"inlang:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"docker:start": "docker compose up -d && pnpm docker:prune",
		"docker:build": "docker compose build && pnpm docker:prune",
		"docker:restart": "docker compose restart && pnpm docker:prune",
		"docker:stop": "docker compose stop",
		"docker:down": "docker compose down",
		"docker:logs": "docker compose logs -f",
		"docker:prune": "docker system prune --all --volumes --force",
		"act": "act --rm --secret-file=.github/workflows/.env.secrets",
		"act:ls": "act -l",
		"act:graph": "act --graph"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "1.11.2",
		"@playwright/test": "^1.45.3",
		"@steeze-ui/svelte-icon": "^1.5.0",
		"@steeze-ui/tabler-icons": "^3.1.0",
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/kit": "^2.5.19",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/typography": "^0.5.13",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.12.10",
		"dotenv": "^16.4.5",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.9.0",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.7",
		"postcss": "^8.4.40",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "5.0.0-next.205",
		"svelte-check": "^3.8.5",
		"tailwindcss": "^3.4.7",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.3.5",
		"vitest": "^2.0.5"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/ubuntu": "^5.0.13",
		"@inlang/paraglide-sveltekit": "0.11.0"
	}
}
